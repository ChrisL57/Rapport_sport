<Window x:Class="Rapport_sport.BestPerformancesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Best Performances" Height="300" Width="400">
    <Grid>
        <ListView Name="BestPerformancesListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="100"/>
                    <GridViewColumn Header="Exercice" DisplayMemberBinding="{Binding Exercise}" Width="100"/>
                    <GridViewColumn Header="Poids" DisplayMemberBinding="{Binding Weight}" Width="70"/>
                    <GridViewColumn Header="Reps" DisplayMemberBinding="{Binding Reps}" Width="50"/>
                    <GridViewColumn Header="1RM" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="Red" Text="{Binding OneRM}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
